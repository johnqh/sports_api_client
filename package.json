{
  "name": "@sudobility/sports_api_client",
  "version": "1.0.15",
  "description": "React and React Native compatible client library for API-Football v3 with TypeScript support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "restricted"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "bunx tsc -p tsconfig.build.json",
    "build:watch": "bunx tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "bunx eslint src --ext .ts,.tsx",
    "lint:fix": "bunx eslint src --ext .ts,.tsx --fix",
    "format": "bunx prettier --write src/**/*.ts",
    "format:check": "bunx prettier --check src/**/*.ts",
    "typecheck": "bunx tsc --noEmit"
  },
  "keywords": [
    "api-football",
    "football",
    "soccer",
    "sports",
    "api",
    "client",
    "react",
    "react-native",
    "typescript",
    "zustand"
  ],
  "author": "Sudobility Team",
  "license": "BUSL-1.1",
  "peerDependencies": {
    "@sudobility/di": "^1.5.34",
    "@sudobility/types": "^1.9.50",
    "@tanstack/react-query": ">=5.0.0",
    "react": ">=18.0.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@sudobility/configs": "^0.0.62",
    "@sudobility/di": "^1.5.34",
    "@sudobility/types": "^1.9.50",
    "@tanstack/react-query": "^5.90.5",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.3.4",
    "prettier": "^3.6.2",
    "react": "^19.2.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4",
    "zustand": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johnqh/sports_api_client.git"
  },
  "bugs": {
    "url": "https://github.com/johnqh/sports_api_client/issues"
  },
  "homepage": "https://github.com/johnqh/sports_api_client#readme"
}
